{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "lib": ["es2015"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
